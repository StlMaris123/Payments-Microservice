<p id="notice"><%= notice %></p>

<h1>My Payments</h1>
<div class="list-group">
<div class="overflow-auto">
  
  <% @payments&.each do |payment| %>
   <div class="forum-item">
      <%= link_to payment, class: "list-group-item list-group-item-action" do %>
        <div class="d-flex w-100 justify-content-between ">
          <h5 class="mb-1 "><b>Amount: <%= payment.amount %></b></h5>
          <small><b></b><%= payment&.created_at&.to_date %></small>
        </div>
        <p class="mb-1"><%= payment.description %></p>
                    
      <% end %>
    </div>
    <% end %>

  </div>
</div>
<%= link_to 'New Payment', new_payment_path %>




