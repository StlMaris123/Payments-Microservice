<div class="form-group">
  <%= form_with(model: payment, local: true) do |form| %>
    <% if payment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

        <ul>
          <% payment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
     <div class="form-row">
       <div class="form-group col-md-6">
         <div class="field">
          <%= form.label :from_bank_account %>
          <%= form.text_field :from_bank_account, class: "form-control" %>
        </div>
       </div>
       <div class="form-group col-md-6">
        <div class="field">
          <%= form.label :to_bank_account %>
          <%= form.text_field :to_bank_account, class: "form-control" %>
        </div>       
       </div>
      </div>

      <div class="form-row">
       <div class="form-group col-md-6">
          <div class="field">
            <%= form.label :from_account_name %>
            <%= form.text_field :from_account_name, class: "form-control" %>
          </div>
       </div>
       <div class="form-group col-md-6">
         <div class="field">
            <%= form.label :to_account_name %>
            <%= form.text_field :to_account_name, class: "form-control" %>
          </div>       
        </div>
      </div>

      <div class="form-row">
       <div class="form-group col-md-6">
          <div class="field">
            <%= form.label :from_account_number %>
            <%= form.text_field :from_account_number, class: "form-control" %>
          </div>
       </div>
       
       <div class="form-group col-md-6">
          <div class="field">
            <%= form.label :to_account_number %>
            <%= form.text_field :to_account_number, class: "form-control" %>
         </div>
       </div>
      </div>

      <div class="form-row">
       <div class="form-group col-md-6">
         <div class="field">
          <%= form.label :from_bank_code %>
          <%= form.text_field :from_bank_code, class: "form-control" %>
        </div>
       </div>      
       <div class="form-group col-md-6">
       
        <div class="field">
          <%= form.label :to_bank_code %>
          <%= form.text_field :to_bank_code, class: "form-control" %>
        </div>
       </div>
      </div>

      <div class="form-row">
       <div class="form-group col-md-6">
        <div class="field">
          <%= form.label :from_currency %>
          <%= form.text_field :from_currency, class: "form-control" %>
        </div>
       </div>
      <div class="form-group col-md-6">
        <div class="field">
          <%= form.label :to_currency_code %>
          <%= form.text_field :to_currency_code, class: "form-control" %>
        </div>
       </div>
      </div>   

    <div class="field">
      <%= form.label :amount %>
      <%= form.text_field :amount, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control" %>
    </div>  

    <div class="actions">
      <%= form.submit 'submit', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
