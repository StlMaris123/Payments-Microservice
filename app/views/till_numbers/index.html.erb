<p id="notice"><%= notice %></p>

<h1>Till Numbers</h1>

<table>
  <thead>
    <tr>
      <th>Doctor name</th>
      <th>Contact number</th>
      <th>Till number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @till_numbers.each do |till_number| %>
      <tr>
        <td><%= till_number.doctor_name %></td>
        <td><%= till_number.contact_number %></td>
        <td><%= till_number.till_number %></td>
        <td><%= link_to 'Show', till_number %></td>
        <td><%= link_to 'Edit', edit_till_number_path(till_number) %></td>
        <td><%= link_to 'Destroy', till_number, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

